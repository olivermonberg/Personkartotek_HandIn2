    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="*"/>
            <ColumnDefinition Width ="*"/>
            <ColumnDefinition Width ="*"/>
        </Grid.ColumnDefinitions>



        <Label Content="Current Alternative address:" Grid.Column="1" Grid.Row="0"></Label>
        <Label Content="New Alternative address:" Grid.Column="2" Grid.Row="0"></Label>

        <Label Content="Type:" Grid.Column="0" Grid.Row="1"></Label>
        <Label Content="Street name:" Grid.Column="0" Grid.Row="2"></Label>
        <Label Content="Street number:" Grid.Column="0" Grid.Row="3"></Label>
        <Label Content="City:" Grid.Column="0" Grid.Row="4"></Label>
        <Label Content="Postal code:" Grid.Column="0" Grid.Row="5"></Label>
        <Label Content="Country:" Grid.Column="0" Grid.Row="6"></Label>

        <TextBox Name="TypeBox"  Grid.Column="1" Grid.Row="1"></TextBox>
        <TextBox Name="StreetNameBox"  Grid.Column="1" Grid.Row="2"></TextBox>
        <TextBox Name="StreetNumberBox"  Grid.Column="1" Grid.Row="3"></TextBox>
        <TextBox Name="CityNameBox"  Grid.Column="1" Grid.Row="4"></TextBox>
        <TextBox Name="PostalCodeBox"  Grid.Column="1" Grid.Row="5"></TextBox>
        <TextBox Name="CountryBox"  Grid.Column="1" Grid.Row="6"></TextBox>

        <TextBox Name="newTypeBox"  Grid.Column="2" Grid.Row="1"></TextBox>
        <TextBox Name="newStreetNameBox"  Grid.Column="2" Grid.Row="2"></TextBox>
        <TextBox Name="newStreetNumberBox"  Grid.Column="2" Grid.Row="3"></TextBox>
        <TextBox Name="newCityNameBox"  Grid.Column="2" Grid.Row="4"></TextBox>
        <TextBox Name="newPostalCodeBox"  Grid.Column="2" Grid.Row="5"></TextBox>
        <TextBox Name="newCountryBox"  Grid.Column="2" Grid.Row="6"></TextBox>

        <Button Name="Change" Content="Change" Grid.Column="2" Grid.Row="7" Click="Change_Click"></Button>


    </Grid>
</Window>
